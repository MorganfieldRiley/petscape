<div class="container pt-5 pb-5">
  <div class="card-white p-5 text-center" id="introduction">
    <h1>Hello, I'm <%= @pet_nanny.user.name %> </h1>
    <img src="https://m.media-amazon.com/images/M/MV5BY2ViNDIwNmUtZGQ5Ni00MDYxLWI5YTktNWU1NGRlYWQ1ZDg0XkEyXkFqcGdeQXVyOTAyMDgxODQ@._V1_UY1200_CR166,0,630,1200_AL_.jpg" class="img-round"  alt="pet_name">
    <p>
      <span class="font-weight-bold">Address:</span> <%= @pet_nanny.user.address %>
    </p>
    <p>
      <span class="font-weight-bold">Phone Number:</span> <%= @pet_nanny.user.phone_number %>
    </p>
    <p>
      <span class="font-weight-bold">Email:</span> <%= @pet_nanny.user.email %>
    </p>
    <% @bookings.each do |booking|%>
      <div>
        <% if booking.user == current_user  %>
          <%= booking.pet.name %>
          <%= booking.star_time %>
          <%= booking.end_time %>
          <%= booking.status %>
        <% end %>
      </div>
    <% end %>
      <h3 class="mt-5"> Book me</h3>
      <%= simple_form_for @booking  do |f|  %>
      <%= f.input :pet_id, collection: current_user.pets, required: true %>
      <%= f.input :star_time, wrapper_html: { class: 'flex-select' }, as: :date, html5: true, required: true%>
      <%= f.input :end_time, wrapper_html: { class: 'flex-select' }, as: :date, html5: true, required: true%>
      <%= f.input :pet_nanny_id, input_html: {value: @pet_nanny.id}, as: :hidden  %>
      <%= f.submit "Book", class: "btn btn-info" %>
      <% end %>

      <div class = "m-5">
        <%= form_tag orders_path do %>
          <%= hidden_field_tag 'pet_nanny_id', @pet_nanny.id %>
          <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
        <% end %>
      </div>

  </div>

  

</div>
