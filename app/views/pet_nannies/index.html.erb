<h1>Find a Nanny</h1>
  <div class="container">
    <div class="cards">
      <% @pet_nannies.each do |nanny| %>
        <%= link_to nanny  do %>
          <div class="card">
            <%= nanny.user.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <%= form_tag pet_nannies_path, method: :get, id: "search-form" do %>
     <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Write a city",
      required: "required"
    %>
    <%= date_field_tag :start_date,
      params[:start_date],
      class: "form-control",
      placeholder: "start date",
      required: "required"
    %>
    <%= date_field_tag :end_date,
      params[:end_date],
      class: "form-control",
      placeholder: "end date",
      required: "required"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

<div id="map"
    style="width: 100%; height: 600px;"
