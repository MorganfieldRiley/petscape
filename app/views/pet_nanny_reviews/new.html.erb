<div class="container" id="review">
  <h1 class="text-center mb-5">Leave a review:</h1>
  <div class="row">
    <div class="col-7 offset-sm-3">
      <%= simple_form_for [ @booking, @review ] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience" %>
        <%= f.submit "Submit your review" %>
      <% end %>
    </div>
  </div>
</div>
