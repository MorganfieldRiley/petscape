<%= render "partials/banner", header: "Fuck Yo Pets, Take A Holiday"%>

<h1>Animals that'll pay your utility bills!</h1>
    <div class="container">
      <div class="cards">
        <% @pets.each do |pet| %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path pet.photo.key, height: 300, crop: :fill %>')">
          <%= pet.name %>
        </div>
        <% end %>
      </div>
    </div>
